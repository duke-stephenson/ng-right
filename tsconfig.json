{
    "version": "1.6.2",
    "compilerOptions": {
        "noImplicitAny": false,
        "failOnTypeErrors": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es5",
        "rootDir": ".",
        "fast": "never",
        "outDir": "lib",
        "sourceMap": false,
        "noExternalResolve": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "ng-right-tests.ts"
    ],
    "filesGlob": [
        "./ts/**/*.ts",
        "./typings/**/*.ts",
        "!**/*baseDir*",
        "!ts/refs.ts"
    ],
    "files": [
        "ts/bindings.ts",
        "ts/bootstrap.ts",
        "ts/directives.ts",
        "ts/index.ts",
        "ts/inject.ts",
        "ts/services.ts",
        "ts/state.ts",
        "ts/utils.ts",
        "typings/ng-right/ng-right.d.ts"
    ]
}