{
  "version": "1.6.2",
  "compilerOptions": {
    "noImplicitAny": false,
    "failOnTypeErrors": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "rootDir": ".",
    "outDir": "js",
    "fast": "never",
    "sourceMap": false,
    "noExternalResolve": true
  },
  "exclude": [
    "node_modules",
    "js",
    "ng-right-tests.ts"
  ],
  "filesGlob": [
    "./ts/**/*.ts",
    "./typings/**/*.ts",
    "!**/*baseDir*"
  ],
  "files": [
    "ts/bindings.ts",
    "ts/bootstrap.ts",
    "ts/directives.ts",
    "ts/index.ts",
    "ts/inject.ts",
    "ts/refs.ts",
    "ts/services.ts",
    "ts/state.ts",
    "ts/utils.ts",
    "typings/angular-ui-router/angular-ui-router.d.ts",
    "typings/angularjs/angular.d.ts",
    "typings/jquery/jquery.d.ts",
    "typings/ng-right/ng-right.d.ts"
  ]
}
